<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>loginControl</servlet-name>
        <servlet-class>controller.loginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListQuestionServlet</servlet-name>
        <servlet-class>controller.ListQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResultServlet</servlet-name>
        <servlet-class>controller.ResultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListExamServlet</servlet-name>
        <servlet-class>controller.ListExamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>controller.ReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListQuestionServlet</servlet-name>
        <url-pattern>/listquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultServlet</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListExamServlet</servlet-name>
        <url-pattern>/listexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/review</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            6000
        </session-timeout>
    </session-config>
</web-app>
